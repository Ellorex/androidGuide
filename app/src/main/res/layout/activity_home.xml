<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/accueil1"/>
        <Button
            android:text="@string/homebtn_top"
            android:textColor="@color/colorWhite"
            android:gravity="start|center_vertical"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/accueil2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="showRestaurant"
            android:text="@string/homebtn_resto"
            style="@style/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/accueil3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="showHotel"
            android:text="@string/homebtn_hotel"
            style="@style/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/accueil4"/>
    </LinearLayout>
</LinearLayout>