<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/photo_restaurant"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="MC DO"
            android:gravity="center"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fast Food"
            android:padding="5dp"/>
        <Button
            android:id="@+id/buttonEmail"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="mac@do.com"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center"
            android:background="@drawable/bouton_email"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/buttonTel"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0102030405"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical|center"
            android:background="@drawable/bouton_tel"/>
        <Button
            android:id="@+id/buttonSite"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="https://www.mcdo.com"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical|center"
            android:background="@drawable/bouton_site"/>
    </LinearLayout>
</LinearLayout>